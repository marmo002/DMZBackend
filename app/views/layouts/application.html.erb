<!DOCTYPE html>
<html>
  <head>
    <title>DMZBackend</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if flash %>
      <p><%= flash[:notice] %></p>
      <p><%= flash[:alert] %></p>
      <% end %>

      <ul>
        <li>
          <%= link_to 'Log in', new_sessions_path %> or <%= link_to 'Sign Up', new_user_path %>
        </li>
      </ul>
    </header>
    <%= yield %>
  </body>
</html>
